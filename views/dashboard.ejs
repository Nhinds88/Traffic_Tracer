<%- include('partials/header.ejs') %>

    <br>
    <br>

    <h1 class="pageTitle">Dashboard</h1>
    <h1 class="storeTitle"> </h1>

    <br>
    <br>

    <div id="reports">
        <div id="countsReport">
            <p id="reporttitle">Daily Entry and Exit Totals</p>
            <p id="reportsubtitle">Select your date range</p>
            <input type="date" class="selections" id="d1" name="date1" placeholder="Starting Date" required>
            <input type="date" class="selections" id="d2" name="date2" placeholder="Ending Date" required>
            <button class="selections" id='getData'>
                Get Data
            </button>
            <div class="containerChart">
                <canvas id="myChartEOE"></canvas>
            </div>

            <hr class="rounded">

            <p id="reportsubtitle">Daily Counts PDF</p>

            <form action="/api/countspdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter dates </label>
                <input class="selections" id="entry1" type="date" name="entry1" required>
                <input class="selections" id="entry2" type="date" name="entry2" required>
                <input class="selections" id="getDailyCountsPDF" type="submit" value="Generate PDF">
            </form>            

            <hr class="rounded">
            <br>
            <br>
        </div>
        <div id="timesanddatesReport">
            <p id="reporttitle">Daily Individual Entries and Exits</p>
            <p id="reportsubtitle">Select your date range</p>
            <input type="date" class="selections" id="time1" name="datefortime1" required>
            <input type="date" class="selections" id="time2" name="datefortime2" required>
            <button class="selections" id='getTimeData'>
                Get Data
            </button>
            <div class="containerChart">
                <canvas id="myChartTime"></canvas>
            </div>

            <hr class="rounded">

            <p id="reportsubtitle">Entry PDF</p>

            <form action="/api/entrypdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter dates </label>
                <input class="selections" id="entry1" type="date" name="entry1" required>
                <input class="selections" id="entry2" type="date" name="entry2" required>
                <input class="selections" id="getEntryPDF" type="submit" value="Generate PDF">
            </form>

            <br>
            <hr class="rounded">
            <br>

            <p id="reportsubtitle">Exit PDF</p>

            <form action="/api/exitpdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter dates </label>
                <input class="selections" id="entry1" type="date" name="entry1" required>
                <input class="selections" id="entry2" type="date" name="entry2" required>
                <input class="selections" id="getexitPDF" type="submit" value="Generate PDF">
            </form>

            <hr class="rounded">
            <br>
            <br>
        </div>
        <div id="hourlyReport">
            <p id="reporttitle">Hourly Entry and Exit Totals</p>
            <p id="reportsubtitle">Select your date</p>
            <input type="date" class="selections" id="day" name="date" required>
            <button class="selections" id='getHourlyData'>
                Get Data
            </button>
            <div class="containerChart">
                <canvas id="myChartHourly"></canvas>
            </div>

            <hr class="rounded">

            <p id="reportsubtitle">Day Enter Counts PDF</p>

            <form action="/api/dayEnterCountspdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter date </label>
                <input class="selections" id="dayEnterPDF" type="date" name="dayEnterPDF" required>
                <input class="selections" id="getDayEnterCountsPDF" type="submit" value="Generate PDF">
            </form>

            <br>
            <hr class="rounded">
            <br>

            <p id="reportsubtitle">Day Exit Counts PDF</p>

            <form action="/api/dayExitCountspdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter date </label>
                <input class="selections" id="dayExitPDF" type="date" name="dayExitPDF" required>
                <input class="selections" id="getDayExitCountsPDF" type="submit" value="Generate PDF">
            </form>

            <hr class="rounded">
            <br>
            <br>
        </div>
        <div id="hourlyIndividualReport">
            <p id="reporttitle">Individual Hourly Entry and Exit</p>
            <p id="reportsubtitle">Select your date</p>
            <input type="date" class="selections" id="scatterDay" name="date" required>
            <button class="selections" id='getIndividualHourlyData'>
                Get Data
            </button>
            <div class="containerChart">
                <canvas id="myChartIndividualHourly"></canvas>
            </div>

            <hr class="rounded">

            <p id="reportsubtitle">Single Day Entry PDF</p>

            <form action="/api/entryIndividualpdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter date </label>
                <input class="selections" id="entry" type="date" name="entry" required>
                <input class="selections" id="getSingleDayPDF" type="submit" value="Generate PDF">
            </form>

            <br>
            <hr class="rounded">
            <br>

            <p id="reportsubtitle">Single Day Exit PDF</p>

            <form action="/api/exitIndividualpdf" method="post">
                <label id="reportsubtitle" for="pdfReport">Enter date </label>
                <input class="selections" id="exit" type="date" name="exit" required>
                <input class="selections" id="getSingleDayPDF" type="submit" value="Generate PDF">
            </form>

            <hr class="rounded">
            <br>
            <br>
        </div>
    </div>

    <%- include('partials/footer_NoLink.ejs') %>